{
  "name": "@boilerplatepowa/nuxt-design-system",
  "version": "1.0.1",
  "description": "Modern Design System for Nuxt 3.18+ with TailwindCSS, DaisyUI and Storybook",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tailwind": {
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist",
    "tailwind.config.cjs",
    "postcss.config.cjs"
  ],
  "keywords": [
    "nuxt",
    "design-system",
    "tailwindcss",
    "daisyui",
    "storybook",
    "vue",
    "typescript"
  ],
  "author": "BoilerplatePowa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boilerplatepowa/nuxt-design-system.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "nuxt dev",
    "dev:storybook": "storybook dev -p 6006",
    "start": "node scripts/start.js",
    "build": "vite build",
    "build:nuxt": "nuxt build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:accessibility": "playwright test --grep accessibility",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "vue": "^3.5.0",
    "nuxt": "^3.18.0",
    "@nuxt/kit": "^3.18.0",
    "tailwindcss": "^3.4.0",
    "daisyui": "^4.12.0",
    "postcss": "^8.5.0",
    "autoprefixer": "^10.4.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.7.0",
    "@nuxt/test-utils": "^3.18.0",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/addon-interactions": "^8.6.0",
    "@storybook/addon-links": "^8.6.0",
    "@storybook/addon-a11y": "^8.6.0",
    "@storybook/blocks": "^8.6.0",
    "@storybook/test": "^8.6.0",
    "@storybook/vue3": "^8.6.0",
    "@storybook/vue3-vite": "^8.6.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "stylelint": "^16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "commitizen": "^4.3.0",
    "typescript": "^5.7.0",
    "vue-tsc": "^2.1.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.2.0",
    "vitest": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "jsdom": "^25.0.0",
    "storybook": "^8.6.0",
    "@axe-core/playwright": "^4.10.0",
    "playwright": "^1.47.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "nuxt": "^3.18.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
