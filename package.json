{
  "name": "@boilerplatepowa/nuxt-design-system",
  "version": "1.0.5",
  "description": "Modern Design System for Nuxt 4+ with TailwindCSS, DaisyUI and Storybook",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist",
    "tailwind.config.cjs",
    "postcss.config.cjs"
  ],
  "keywords": [
    "nuxt",
    "design-system",
    "tailwindcss",
    "daisyui",
    "storybook",
    "vue",
    "typescript"
  ],
  "author": "BoilerplatePowa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boilerplatepowa/nuxt-design-system.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "nuxt dev",
    "dev:storybook": "storybook dev -p 6006",
    "start": "node scripts/start.js",
    "build": "vite build",
    "build:nuxt": "nuxt build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "commit": "cz",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "start-server-and-test preview http://localhost:4173 \"cypress run\"",
    "dev:ts": "node --experimental-strip-types --watch src/example.ts",
    "test:ts": "node --experimental-strip-types --test test/*.test.ts"
  },
  "dependencies": {
    "@nuxt/kit": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.50",
    "i18n-iso-countries": "^7.14.0",
    "imask": "^7.6.1",
    "libphonenumber-js": "^1.12.13",
    "lucide-vue-next": "^0.540.0",
    "nuxt": "^4.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.0",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@boilerplatepowa/configuration-starter-boilerplate": "^1.1.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/test-utils": "3.19.2",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/builder-vite": "^9.1.2",
    "@storybook/vue3-vite": "^9.1.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "commitizen": "^4.3.1",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.6.0",
    "cz-git": "^1.12.0",
    "depcheck": "^1.4.7",
    "dotenv-linter": "^0.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-storybook": "9.1.2",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.13",
    "storybook": "^9.1.2",
    "stylelint": "^16.23.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "peerDependencies": {
    "nuxt": "^4.0.0",
    "vue": "^3.5.0"
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
