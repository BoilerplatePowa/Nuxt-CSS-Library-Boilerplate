{
  "name": "@boilerplatepowa/nuxt-design-system",
  "version": "1.0.3",
  "description": "Modern Design System for Nuxt 4+ with TailwindCSS, DaisyUI and Storybook",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tailwind": {
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist",
    "tailwind.config.cjs",
    "postcss.config.cjs"
  ],
  "keywords": [
    "nuxt",
    "design-system",
    "tailwindcss",
    "daisyui",
    "storybook",
    "vue",
    "typescript"
  ],
  "author": "BoilerplatePowa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boilerplatepowa/nuxt-design-system.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "nuxt dev",
    "dev:storybook": "storybook dev -p 6006",
    "start": "node scripts/start.js",
    "build": "vite build",
    "build:nuxt": "nuxt build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:accessibility": "playwright test --grep accessibility",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "vue": "^3.5.18",
    "nuxt": "^4.0.3",
    "@nuxt/kit": "^4.0.3",
    "tailwindcss": "^4.1.11",
    "daisyui": "^5.0.50",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/test-utils": "3.19.2",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/vue3": "^9.1.2",
    "@storybook/vue3-vite": "^9.1.2",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "commitizen": "^4.3.1",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.0.5",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "storybook": "^9.1.2",
    "@axe-core/playwright": "^4.10.2",
    "playwright": "^1.54.2"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "nuxt": "^4.0.0"
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  }
}
